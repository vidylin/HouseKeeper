<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white">
	<RelativeLayout
		android:id="@+id/add_fire_title"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:background="#000000"
		android:orientation="vertical" >

		<RelativeLayout
			android:id="@+id/add_fire_back_btn"
			android:layout_width="65dp"
			android:layout_height="45dp"
			android:layout_alignParentLeft="true"
			>
			<ImageView
				android:layout_width="10dp"
				android:layout_height="16.5dp"
				android:layout_centerInParent="true"
				android:visibility="gone"
				android:src="@drawable/selector_back"/>
		</RelativeLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textColor="#ffffff"
			android:text="添加设备"
			android:textSize="20sp"
			android:textStyle="bold" />
	</RelativeLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="400dp"
		android:layout_marginTop="15dp"
		android:layout_below="@id/add_fire_title">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp">
				<TextView
					android:id="@+id/camera_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="摄像机"/>
				<EditText
					android:id="@+id/add_repeater_mac"
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:textSize="14sp"
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:layout_marginLeft="50dp"
					android:gravity="center_vertical"
					android:padding="6dp"
					android:layout_toLeftOf="@+id/scan_repeater_ma"
					android:hint="摄像机ID"
					android:inputType="none"
					android:textColor="@color/text_view_and_kuang"
					android:textColorHint="@color/hint_color_text"
					android:imeOptions="actionNext"
					android:background="@drawable/edit_view_bg"
					/>
				<ImageView
					android:id="@+id/scan_repeater_ma"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_marginLeft="10dp"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:visibility="gone"
					android:src="@drawable/saoma_selector"/>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp">
				<TextView
					android:id="@+id/camera_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="名称"/>
				<EditText
					android:id="@+id/add_fire_mac"
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:textSize="14sp"
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:layout_marginLeft="50dp"
					android:gravity="center_vertical"
					android:padding="6dp"
					android:layout_toLeftOf="@+id/scan_er_wei_ma"
					android:hint="摄像机名称"
					android:textColor="@color/text_view_and_kuang"
					android:textColorHint="@color/hint_color_text"
					android:imeOptions="actionNext"
					android:background="@drawable/edit_view_bg"
					/>
				<ImageView
					android:id="@+id/scan_er_wei_ma"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_marginLeft="10dp"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:visibility="gone"
					android:src="@drawable/saoma_selector"/>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/add_camera_relative"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="密码"/>
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50dp"
					android:background="@drawable/edit_view_bg">
					<EditText
						android:id="@+id/add_camera_name"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:textSize="14sp"
						android:background="@null"
						android:layout_marginTop="3dp"
						android:layout_marginBottom="3dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:hint="摄像机密码"
						android:textColorHint="@color/hint_color_text"
						android:textColor="@color/text_view_and_kuang"
						/>
				</RelativeLayout>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="120dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="8dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="经度"/>
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50dp"
					android:layout_marginRight="50dp"
					android:background="@drawable/edit_view_bg">
					<EditText
						android:id="@+id/add_fire_lat"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:textSize="14sp"
						android:background="@null"
						android:layout_marginTop="3dp"
						android:layout_marginBottom="3dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:editable="false"
						android:hint="经度"
						android:textColorHint="@color/hint_color_text"
						android:textColor="@color/text_view_and_kuang"
						android:imeOptions="actionNext"
						/>
				</RelativeLayout>
				<ImageView
					android:id="@+id/location_image"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:src="@drawable/tj_dw_selector"/>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="120dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="8dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="纬度"/>
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50dp"
					android:layout_marginRight="50dp"
					android:background="@drawable/edit_view_bg">
					<EditText
						android:id="@+id/add_fire_lon"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:textSize="14sp"
						android:background="@null"
						android:layout_marginTop="3dp"
						android:layout_marginBottom="3dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:editable="false"
						android:hint="纬度"
						android:textColorHint="@color/hint_color_text"
						android:textColor="@color/text_view_and_kuang"
						android:imeOptions="actionNext"
						/>
				</RelativeLayout>
			</RelativeLayout>


			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="地址"/>
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50dp"
					android:background="@drawable/edit_view_bg">
					<EditText
						android:id="@+id/add_fire_address"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:background="@null"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="5dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:paddingTop="3dp"
						android:paddingBottom="3dp"
						android:layout_centerVertical="true"
						android:hint="地址"
						android:textColorHint="@color/hint_color_text"
						android:singleLine="false"
						android:textColor="@color/text_view_and_kuang"
						/>
				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="区域"/>
				<com.hrsst.housekeeper.common.widget.XCDropDownListView
					android:id="@+id/add_fire_zjq"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50dp" />
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="类型"/>
				<com.hrsst.housekeeper.common.widget.XCDropDownListView
					android:id="@+id/add_fire_type"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50dp" />
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="负责人"/>
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50dp"
					android:background="@drawable/edit_view_bg">
					<EditText
						android:id="@+id/add_fire_man"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:textSize="14sp"
						android:background="@null"
						android:layout_marginTop="3dp"
						android:layout_marginBottom="3dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:hint="姓名"
						android:textColorHint="@color/hint_color_text"
						android:textColor="@color/text_view_and_kuang"
						android:imeOptions="actionNext"
						/>
				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp">
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50dp"
					android:background="@drawable/edit_view_bg">
					<EditText
						android:id="@+id/add_fire_man_phone"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:textSize="14sp"
						android:background="@null"
						android:layout_marginTop="3dp"
						android:layout_marginBottom="3dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:hint="电话"
						android:inputType="number"
						android:textColorHint="@color/hint_color_text"
						android:textColor="@color/text_view_and_kuang"
						android:imeOptions="actionNext"
						/>
				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="负责人"/>
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50dp"
					android:background="@drawable/edit_view_bg">
					<EditText
						android:id="@+id/add_fire_man_two"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:textSize="14sp"
						android:background="@null"
						android:layout_marginTop="3dp"
						android:layout_marginBottom="3dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:hint="姓名"
						android:textColorHint="@color/hint_color_text"
						android:textColor="@color/text_view_and_kuang"
						android:imeOptions="actionNext"
						/>
				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp">
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50dp"
					android:background="@drawable/edit_view_bg">
					<EditText
						android:id="@+id/add_fire_man_phone_two"
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:textSize="14sp"
						android:background="@null"
						android:layout_marginTop="3dp"
						android:layout_marginBottom="3dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:inputType="number"
						android:hint="电话"
						android:textColorHint="@color/hint_color_text"
						android:textColor="@color/text_view_and_kuang"
						android:imeOptions="actionNext"
						/>
				</RelativeLayout>
			</RelativeLayout>
		</LinearLayout>
	</ScrollView>

	<RelativeLayout
		android:id="@+id/add_fire_dev_btn"
		android:layout_width="150dp"
		android:layout_height="45dp"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="15dp"
		android:background="@drawable/login_button_selector"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="添加设备"
			android:textColor="#ffffff"
			android:textSize="16sp"
			android:layout_centerInParent="true"
			/>
	</RelativeLayout>
	<include layout="@layout/progress_bar"/>
</RelativeLayout>
